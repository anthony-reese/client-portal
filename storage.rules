rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /projects/{projectId}/{allPaths=**} {

      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && request.auth.token.admin == true;
      }

      function isProjectClient() {
        return isSignedIn() &&
          get(/databases/(default)/documents/projects/$(projectId)).data.clientEmail
            == request.auth.token.email;
      }

      // READ & LIST
      allow read, list: if isAdmin() || isProjectClient();

      // WRITE
      allow write: if isAdmin();
    }
  }
}
